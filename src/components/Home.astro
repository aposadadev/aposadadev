      class="min-h-screen pt-20 lg:pt-32 mx-auto max-w-[1250px] mt-20"
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
        <!-- Content Column -->
        <div class="order-2 lg:order-1 text-center lg:text-left">
          <div class="hero-greeting">
            <span class="greeting-text">ðŸ‘‹ Hello, I'm</span>
          </div>

          <h1
            class="mt-4 text-4xl font-bold md:text-6xl lg:text-7xl text-white neon-title"
          >
            AndrÃ©s Posada
          </h1>

          <h2
            class="mt-3 mb-6 text-xl font-bold sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl opacity-90 text-cyan-300 neon-subtitle"
          >
            Software Engineer
          </h2>

          <p
            class="text-base sm:text-lg md:text-xl text-white text-balance neon-text mb-8"
          >
            I like building solutions for web and mobile devices with
            cutting-edge technology. Passionate about creating digital
            experiences that make a difference.
          </p>

          <!-- Action Buttons -->
          <div
            class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mt-10 md:mt-16"
          >
            <button class="cyberpunk-btn primary-btn px-8 py-3 border rounded">
              <span>Download Resume</span>
            </button>
          </div>

          <!-- Quick Stats -->
          <div
            class="grid grid-cols-2 lg:grid-cols-3 gap-6 mt-12 stats-section"
          >
            <div class="stat-item">
              <div class="stat-number">7+</div>
              <div class="stat-label">Years Experience</div>
            </div>
            <div class="stat-item">
              <div class="stat-number">15+</div>
              <div class="stat-label">Projects Done</div>
            </div>
          </div>
        </div>

        <!-- Image Column -->
        <div class="order-1 lg:order-2 flex justify-center">
          <div class="hero-image-container">
            <div class="image-glow-effect"></div>
            <img
              src="/hero.png"
              alt="AndrÃ©s Posada - Software Engineer"
              class="hero-image"
              loading="eager"
            />
            <div class="image-overlay"></div>
          </div>
        </div>
