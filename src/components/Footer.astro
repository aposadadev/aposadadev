---
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-white/[0.02] backdrop-blur-xl border-t border-cyan-400/10 mt-16 relative footer-container"
>
  <div class="max-w-[1250px] mx-auto py-8 px-4 lg:py-16 lg:px-8">
    <div class="text-center">
      <p class="text-white/60 text-sm font-normal m-0">
        © {currentYear} Andrés Posada. All rights reserved.
      </p>
    </div>
  </div>

  <style>
    .footer-container::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(0, 212, 255, 0.5),
        transparent
      );
    }
  </style>
</footer>
