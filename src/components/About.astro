<style>
  @media (hover: none) and (pointer: coarse) {
    .hover\\:-translate-y-1:hover {
      transform: none;
    }
  }

  /* Carousel functionality with CSS only */
  #slide1:checked ~ .carousel-wrapper .carousel-slides {
    transform: translateX(0%);
  }
  #slide2:checked ~ .carousel-wrapper .carousel-slides {
    transform: translateX(-100%);
  }
  #slide3:checked ~ .carousel-wrapper .carousel-slides {
    transform: translateX(-200%);
  }
  #slide4:checked ~ .carousel-wrapper .carousel-slides {
    transform: translateX(-300%);
  }

  /* Active indicator styling */
  #slide1:checked ~ .absolute label[for="slide1"],
  #slide2:checked ~ .absolute label[for="slide2"],
  #slide3:checked ~ .absolute label[for="slide3"],
  #slide4:checked ~ .absolute label[for="slide4"] {
    background: linear-gradient(45deg, #00d4ff, #9333ea);
    transform: scale(1.2);
  }

  /* Arrow visibility control */
  .slide1-arrows,
  .slide2-arrows,
  .slide3-arrows,
  .slide4-arrows {
    display: none;
  }

  input[id="slide1"]:checked ~ .carousel-wrapper .slide1-arrows,
  input[id="slide2"]:checked ~ .carousel-wrapper .slide2-arrows,
  input[id="slide3"]:checked ~ .carousel-wrapper .slide3-arrows,
  input[id="slide4"]:checked ~ .carousel-wrapper .slide4-arrows {
    display: flex;
  }
</style>
